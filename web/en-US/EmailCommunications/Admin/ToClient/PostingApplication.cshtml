@* Email sent to the author of a GIG posting by a professional that have applied to it,
    sending a message and awaiting for answer.

    Sender e-mail: automated@@loconomics.com
    Sender name: Loconomics Cooperative
    Subject: [Action Required] A service professional is interested in your Posting
    Send when: immediate
    Reply-to: service professional
*@
@using WebMatrix.Data;
@{
    LcMessaging.SecureTemplate();

    Layout = "_EmailLayout.cshtml";

    // Initialize for shared components
    var sharedInfo = LcEmailTemplate.GetAccountInfo();
    // All the data for this email:
    var info = LcEmailTemplate.GetPostingInfo();
}

<!-- HEADER -->
<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td bgcolor="#007a7c">
            <!-- HIDDEN PREHEADER TEXT -->
            <div style="display: none; font-size: 1px; color: #fefefe; line-height: 1px; font-family: Helvetica, Arial, sans-serif; max-height: 0px; max-width: 0px; opacity: 0; overflow: hidden;">
                Hi @(info.client.firstName), A professional is interested in your project posting.
            </div>
            <div align="center" style="padding: 0px 15px 0px 15px;">
                <table border="0" cellpadding="0" cellspacing="0" width="500" class="wrapper">
                    <!-- LOGO/PREHEADER TEXT -->
                    <tr>
                        <td style="padding: 20px 0px 30px 0px;" class="logo">
                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                <tr>
                                    <td bgcolor="#007a7c" width="100" align="left"><a href="#" target="_blank"><img alt="Logo" src="@(LcUrl.AppUrl)img/email/@(LcUrl.LangId)/logo-white-large.png" width="120" height="48" style="display: block; font-family: Helvetica, Arial, sans-serif; color: #666666; font-size: 16px;" border="0"></a></td>
                                    <td bgcolor="#007a7c" width="400" align="right" class="mobile-hide">
                                        <table border="0" cellpadding="0" cellspacing="0">
                                            <tr>
                                                <td align="right" style="padding: 0 0 5px 0; font-size: 14px; font-family: Arial, sans-serif; color: #FFFFFF; text-decoration: none;"><span style="color: #FFFFFF; text-decoration: none;">Make life better.<br>Build local economies.</span></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        </td>
    </tr>
</table>

<!-- MAIN COPY -->
<!-- ONE COLUMN SECTION -->
<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td bgcolor="#ffffff" align="center" style="padding: 15px 15px 15px 15px;" class="section-padding">
            <table border="0" cellpadding="0" cellspacing="0" width="500" class="responsive-table">
                <tr>
                    <td>
                        <!-- COPY -->
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td align="left" style="font-size: 24px; font-family: Helvetica, Arial, sans-serif; color: #333333; padding-top: 30px;" class="padding-copy">Hi @(info.client.firstName)!</td>
                            </tr>
                            <tr>
                                <td align="left" style="padding: 20px 0 0 0; font-size: 16px; line-height: 25px; font-family: Helvetica, Arial, sans-serif; color: #666666;" class="padding-copy">
                                    A professional is interested in your project posting "@(info.posting.title)".<br/>
                                    <strong>@(info.serviceProfessional.firstName)</strong> sent you this message:
                                    <pre>@(info.serviceProfessionalMessage)</pre>
                                    <br>
                                    Please reach out to them and start a conversation simply by replying to this email.
                                    <br>
                                    <strong>Their contact information:</strong>
                                    <dl>
                                        <dt>Phone number</dt>
                                        <dd><a href="tel:@(info.serviceProfessional.phone)">@(info.serviceProfessional.phone)</a></dd>
                                        <dt>E-mail</dt>
                                        <dd><a href="mailto:@(info.serviceProfessional.email)">@(info.serviceProfessional.email)</a></dd>
                                        <dt>Listing URL</dt>
                                        <dd><a href="@(info.serviceProfessional.serviceProfessionalProfileUrl)">Their Loconomics listing</a></dd>
                                        <dt>Public bio</dt>
                                        <dd>@(info.serviceProfessional.publicBio)</dd>
                                    </dl>
                                </td>
                            </tr>
                            <tr>
                                <td align="left" style="padding: 20px 0 0 0; text-align: left; font-size: 16px; line-height: 25px; font-family: Helvetica, Arial, sans-serif; color: #666666;" class="padding-copy">At your service,<br><br>The Loconomics team</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
@RenderPage("MessageComponents/$MarketplaceMarketingMessage.cshtml", sharedInfo)
@RenderPage("MessageComponents/$Footer.cshtml", sharedInfo)
